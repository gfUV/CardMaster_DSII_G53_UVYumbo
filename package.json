{
  "name": "cardmaster-monorepo",
  "version": "1.0.0",
  "description": "CardMaster - Sistema de Gesti√≥n de Usuarios con CI/CD",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "prepare": "husky install",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npx tsc --noEmit",
    "build:frontend": "cd frontend && npm run build"
  },
  "keywords": [
    "monorepo",
    "express",
    "vite",
    "typescript",
    "mongodb",
    "ci-cd"
  ],
  "author": "Grupo 53 - UV Yumbo",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "backend/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "frontend/src/**/*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}